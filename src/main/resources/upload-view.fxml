<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vidmot.UploadController">
    <Label text="Choose a file to upload:"/>
    <Button text="Browse..." onAction="#onBrowse"/>
    <TextField fx:id="filePathField" editable="false" promptText="File path..."/>

    <Label text="Nafn lagar:"/>
    <TextField fx:id="songNameField" promptText="Settu inn nafn lagar..."/>

       <Label text="Listamaður:"/>
    <TextField fx:id="artistNameField" promptText="Settu inn nafn listamanns..."/>


    <Label text="Tónlistarstefna:"/>
   <ComboBox fx:id="genreComboBox"/>



    <Button text="Vista" onAction="#onSubmit"/>
</VBox>
